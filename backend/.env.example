# Example environment variables for the backend (do NOT commit real secrets)
# FRONTEND_ORIGINS: comma-separated list of allowed frontend origins (e.g. http://localhost:3000,http://127.0.0.1:3000)
FRONTEND_ORIGINS=http://localhost:3000

# Google OAuth credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Optional: override redirect (defaults to http://localhost:8000/auth/google/callback)
# GOOGLE_REDIRECT_URI=

# Development helper: when GOOGLE_CLIENT_ID is not set, set this to true to
# enable a local dev fallback endpoint `/auth/google/dev` which simulates the
# Google OAuth popup flow for testing. Do NOT enable in production.
DEV_GOOGLE_LOGIN=true

# Database: for production use a DATABASE_URL (e.g. postgres://user:pass@host:5432/dbname)
# When DATABASE_URL is empty the app falls back to a local sqlite database.
DATABASE_URL=

# JWT secret (keep secret in production)
JWT_SECRET=replace-with-a-secure-secret

# Cookie settings
# SESSION_COOKIE_SAMESITE can be 'Lax', 'Strict', or 'None' (use 'None' for cross-site cookies)
SESSION_COOKIE_SAMESITE=Lax
# SESSION_COOKIE_SECURE=true in production when using HTTPS
SESSION_COOKIE_SECURE=false
